<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout_dialog_activity" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/bg_round_dialog</item>
        <item name="android:windowBackgroundFallback">@color/white</item>
    </style>

    <style name="et_dialog_file_name" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/green_list_guide</item>  <!-- 포커스 상태의 밑줄 색 -->
        <item name="android:colorControlNormal">@color/btn_back</item>  <!-- 포커스 되지 않는 상태의 밑줄 색 -->
        <item name="android:textColorHighlight">@color/green_list_guide</item>  <!-- 텍스트 선택 색 -->
        <item name="android:textCursorDrawable">@color/btn_back</item>  <!-- 커서 색 -->
    </style>

    <!-- fragment_main.xml -->
    <style name="fragment_main_img_common">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="fragment_main_container_common">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/main_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toBottomOf">@id/text_timer</item>
        <item name="android:layout_marginTop">@dimen/main_content_margin_big</item>
    </style>
    <style name="fragment_main_cardView_common" parent="@style/CardView">
        <item name="android:layout_width">@dimen/main_card_record_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/main_content_margin_big</item>
        <item name="cardCornerRadius">@dimen/main_card_radius</item>
        <item name="cardElevation">@dimen/main_card_elevation</item>
    </style>
    <style name="fragment_main_layout_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="fragment_main_tv_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/main_content_margin_small</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="fragment_main_btn_record_setting">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/main_content_margin_small</item>
        <item name="android:background">@drawable/bg_btn_record_settings</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:onClick">onClick</item>
    </style>
    <style name="fragment_main_btn_play_setting">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/main_content_margin_small</item>
        <item name="android:background">@drawable/bg_btn_play_settings</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:onClick">onClick</item>
    </style>
    <style name="fragment_main_cardView_bottom_common" parent="@style/CardView">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/main_content_margin_big</item>
        <item name="android:layout_marginBottom">@dimen/main_content_margin_big</item>
        <item name="cardCornerRadius">@dimen/main_button_card_radius</item>
        <item name="cardElevation">@dimen/main_card_elevation</item>
    </style>
    <style name="fragment_main_btn_common">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:onClick">onClick</item>
    </style>

    <!-- layout_file_name.xml -->
    <style name="layout_file_name_btn_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toBottomOf">@+id/tv_file_name_guide</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_marginVertical">@dimen/main_content_margin_big</item>
        <item name="android:onClick">onClick</item>
    </style>

    <!-- item_list.xml -->
    <style name="item_list_tv_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_title_text_size_small</item>
    </style>

</resources>